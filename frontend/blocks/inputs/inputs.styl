.inputs
  box-sizing border-box
  width 50%
  display flex
  flex-flow column nowrap
  align-content space-between

  &__name,
  &__email
    display flex
    flex-flow row nowrap
    width 100%
    font-family LatoRegular
    justify-content space-between


    &_field
      box-sizing border-box
      width auto
      height 2.4rem
      background-color color-grey
      padding 0.5em
      font-size 1.2em
      margin-bottom 1em
      border-radius 0.5em
      border none
      outline none

    &_thanks
      display none
      font-size .7em
      justify-content center
      align-items center
      color white
      width 5rem
      height 5%
      margin-left 1em
      margin-top 0.1em
      border-radius 0.3em
      background-color color-green
      flex-shrink 0

    &_error
      font-size .7em
      display flex
      justify-content center
      align-items center
      color white
      width 5rem
      height 5%
      margin-left 1em
      margin-top 0.1em
      border-radius 0.3em
      background-color color-red
      flex-shrink 0


  &__message
    display block
    &_field
      border none
      border-radius 0.5em
      width 22rem
      height 10em
      background-color color-grey
      padding 0.5em
      font-size: 1.5em
      resize none
      outline none
      flex-shrink 0

    &_button
      display flex
      justify-content  flex-end
      flex-shrink 0
      width 22rem



