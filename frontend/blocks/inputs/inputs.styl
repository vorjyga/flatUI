.inputs
  box-sizing border-box
  width 49%
  display flex
  flex-flow column nowrap
  align-content space-between
  margin-top .2rem

  &__name,
  &__email
    display flex
    flex-flow row nowrap
    width 100%
    font-family LatoRegular
    justify-content space-between


    &_field
      font-family SourceSansProRegular
      box-sizing border-box
      width 15.5rem
      height 2.2rem
      background-color color-grey
      padding 0.5em 1em
      font-size .9em
      font-weight bold
      margin-bottom 1em
      border-radius 0.2rem
      border none
      outline none

    &_thanks
      display none
      position relative
      font-size .7em
      justify-content center
      align-items center
      color white
      width 5.3rem
      height 2.1rem
      margin-right .3rem
      border-radius 0.3em
      background-color color-green
      flex-shrink 0
      &::before
        content ''
        display block
        background-color inherit
        transform rotate(45deg)
        width 1rem
        height 1rem
        position absolute
        left -.3rem

    &_error
      display flex
      justify-content center
      align-items center
      position relative
      font-size .7em
      letter-spacing .17em
      font-weight bold
      color white
      width 5.3rem
      height 2.1rem
      border-radius 0.3em
      background-color color-red
      flex-shrink 0
      margin-right .3rem
      &::before
        content ''
        display block
        background-color inherit
        transform rotate(45deg)
        width 1rem
        height 1rem
        position absolute
        left -.3rem
  &__message
    display block
    &_field
      font-family SourceSansProRegular
      border none
      border-radius 0.2em
      width 21.5rem
      height 6.5rem
      background-color color-grey
      padding .6em 1em
      font-size 1em
      font-weight bold
      resize none
      outline none
      flex-shrink 0
      letter-spacing .05em

    &_button
      display flex
      justify-content  flex-end
      flex-shrink 0
      width 21.5rem
      margin-top .8rem
