.search-block
  display flex
  flex-flow row wrap
  justify-content center
  border 1px solid color-red
  box-sizing border-box
  width 50%

.search
  display flex
  flex-flow row nowrap
  width 100%
  margin-bottom 1em
  &__input
    width 90%
    height 2.1em
    background-color color-grey
    padding 0.5em
    font-size 1.2em
    border-radius 0.5em 0 0 0.5em
    border none
  &__button
    position relative
    width 10%
    height 3em
    background-color color-red
    color color-white
    border none
    border-radius 0 0.5em 0.5em 0
    &:after
      font-family FontAwesome
      display block
      content '\f002'
      font-size 1.5em

.dropdown
  display flex
  flex-flow row nowrap
  width 100%

  &__menu
    width 100%
    background-color color-grey
    border none
    border-radius 0.5em 0 0 0.5em
    padding 0.5em
    font-size 1.2em
    height 2.1em
    &:after
      position relative
      width 2.1em
      height 2.1em
      background-color color-green
      font-family FontAwesome
      content '\f107'
      color white
      pointer-events none
