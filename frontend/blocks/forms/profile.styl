photoplace-size = 5em

.profile-block
  display flex
  flex-flow column nowrap
  box-sizing border-box
  width 50%

.profile
  display flex
  flex-flow row nowrap
  justify-content center
  margin-bottom 2em
  &:before
    display inline
    position: absolute
    top: 0
    left: 0
    border-top: 10px solid transparent;
    border-bottom: 10px solid transparent;
    border-right: 10px solid color-red
    height 5em
    width 5em

  &__photoplace
    width photoplace-size
    height photoplace-size
    border-radius 50%
    border 0.3em solid color-darkgrey
    background-color color-grey
    display flex
    justify-content center
    align-items center

    &_photo
      width 100%
      height 100%


  &__info
    display flex
    flex-flow column nowrap
    justify-content space-between
    align-content space-around
    align-items center
    width 9em
    margin-left 1em
    padding .3em 0
    border-radius .5em
    &:before
      display inline
      position: absolute
      top: 0
      left: 0
      border-top: 10px solid transparent;
      border-bottom: 10px solid transparent;
      border-right: 10px solid color-red
      height 5em
      width 5em

    &_name
      font-family LatoRegular
      text-align center
      &_grey
        color color-red
      &_white,
      &_green
        color color-white

    &_profession
      color color-white
      font-family LatoBlack
      text-align center
      margin-bottom 0.2em
      &_grey
        color color-darkgrey
      &_white,
      &_green
        color color-white

    &__links
      display flex
      flex-flow row nowrap
      justify-content space-between
      font-size 2em
      width 70%

    &_red
      background-color color-red
    &_green
      background-color color-green
    &_grey
      background-color: color-grey

a:hover
  color color-red
  cursor pointer



/****Стрелочко-костылики****/
.arrow_box_grey {
    position: relative;
    background: color-grey;
  }
.arrow_box_grey:after,
.arrow_box_grey:before {
  right: 100%;
  top: 50%;
  border: solid transparent;
  content: "";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
  border-right-color: color-grey
  border-width: 10px;
  margin-top: -10px;
}

.arrow_box_green {
  position: relative;
  background: color-green;
}
.arrow_box_green:after,
.arrow_box_green:before {
  right: 100%;
  top: 50%;
  border: solid transparent;
  content: "";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
  border-right-color: color-green
  border-width: 10px;
  margin-top: -10px;
}