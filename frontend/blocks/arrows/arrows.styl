.arrows
  display flex
  justify-content center
  flex-flow row wrap

  &__text
    width 100%
    text-align center
    font-weight bold

  &__arrow + &__arrow
    margin-left 2em

  &__arrow

    width 5em
    height 5em
    border-radius 50%
    background transparent
    font-family FontAwesome


    &_left:after
      display block

      margin-right 0.1em
      content '\f104'
      vertical-align middle
      text-align center
      font-size 4em

    &_right:after
      display block

      margin-right -0.1em
      content '\f105'
      vertical-align middle
      text-align center
      font-size 4em


    &_green
      background-color color-green
      color: #ffffff
      border .2em solid color-green

    &_transparent
      background transparent
      border .2em solid color-green
      color color-green

    &_grey
      background-color color-grey
      color: #ffffff
      border .2em solid color-grey

