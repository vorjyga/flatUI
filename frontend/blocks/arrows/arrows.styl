arrow_radius = 3.7rem
.arrow
  width arrow_radius
  height arrow_radius
  border-radius 50%
  background transparent
  font-family FontAwesome
  outline none
  cursor pointer
  display flex
  justify-content center
  align-items center
  &_left:after
    position relative
    top -.1rem
    left -.2rem
    content '\f104'
    font-size 4em
  &_right:after
    position relative
    top -.1rem
    right -.2rem
    content '\f105'
    font-size 4em

  &_green
    background-color color-green
    color color-white
    border .2em solid color-green
  &_green-invert
    background-color color-white
    color color-green

  &_transparent
    background none
    border .2em solid color-green
    color color-green

  &_grey
    background-color color-grey
    color: #ffffff
    border .2em solid color-grey

/*try ripple effect*/
  & .ripple
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    transform: scale(0);
    position: absolute;
    opacity: 1
  & .rippleEffect
    animation: rippleDrop .6s linear;

@keyframes rippleDrop {
  100% {
    transform: scale(2);
    opacity: 0;
  }
}
