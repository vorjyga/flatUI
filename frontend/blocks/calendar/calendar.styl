.calendar-messaging
  display flex
  justify-content space-between
  width 100%

.calendar-block
  width 45%
  &__text
    margin-bottom 1.7rem

.calendar
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center
  width 100%

  &__header
    background-color color-red
    width 21rem
    height 8rem
    text-align center
    font-family LatoLight
    font-size 6rem
    color color-white
    border none
    border-radius .2rem .2rem 0 0
  &__body
    border none
    max-width 300%
  &__footer
    border none
    height 3.6rem
    width 21rem
    background-color #e5e5e5
    cursor pointer
    color color-darkgrey
    text-transform uppercase
    padding 1rem
    box-sizing border-box
    border-radius 0 0 .2rem .2rem

.calendar .ui
  &-corner
    &-all,
    &-top,
    &-left,
    &-bottom,
    &-right
      border-radius 0

  &-state
    &-hover
      background-color inherit
      border none
    &-default
      font-family SourceSansProRegular
      text-align center
      border none
  &-datepicker
    border none
    padding 0
    width 21rem
    margin-bottom 0
    &-month
      font-family LatoLight
      font-size 1.7rem
    &-header
      background-color #d54c2c
      padding 0
      border none
      color color-white
      border-radius none
      height 3.2rem
      display flex
      justify-content center
      align-items center

    &-month
      font-family LatoLight
    &-year
      display none
    &-prev
      display flex
      justify-content center
      align-items center
      padding-right 0.2rem
      margin-top .5rem
      top 1px
      left 1px
      &::after
        font-family FontAwesome
        content '\f053'
        display block
        color white
        font-size 1.5rem
    &-next
      display flex
      justify-content center
      align-items center
      padding-left 0.2rem
      top 1px
      right 1px
      margin-top .5rem
      &::after
        font-family FontAwesome
        content '\f054'
        display block
        color white
        font-size 1.5rem
    & table
      margin-bottom 0
    &-calendar
      & thead
        color color-white
        font-family LatoBlack
        background-color color-red
        text-transform uppercase
        font-size 0.8em

      & tbody
        background-color color-grey
        & td
          border 0.1rem solid color-white
          padding 0
          width 3rem
          height 3rem
          font-size 1em
          text-align center
          & a
            display block
            //height 100%
            margin-top 0.1rem
            background-color color-grey
        & td:first-child
          border-left none
        & td:last-child
          border-right none

  &-widget
    &.ui-widget-content
      border none

    &-content
      & .ui-state-default
        font-family SourceSansProRegular
        font-size 1.7rem
        border none
        text-align center
        color #868686
        padding 0.1rem 0.1rem
      & .ui-state-highlight
        color color-white
        background-color color-red
      & .ui-state-active
        color color-white
        background-color color-red



.ui-widget-header .ui-icon
  background-image none



