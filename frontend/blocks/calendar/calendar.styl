.calendar-messaging
  display flex
  justify-content space-around

.calendar-block
  width 40%

.calendar
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center
  width 100%

  &__header
    background-color color-red
    max-width 283px
    width 283px
    min-width 200px
    text-align center
    font-family LatoLight
    font-size 5rem
    color color-white
    border none
  &__body
    border none

  &__footer
    border none
    height 3rem
    max-width 283px
    width 283px
    min-width 200px
    background-color #e5e5e5
    cursor pointer
    color color-darkgrey
    text-transform uppercase
    padding 1rem
    box-sizing border-box
.ui
  &-corner
    &-all,
    &-top,
    &-left,
    &-bottom,
    &-right
      border-radius 0

  &-state
    &-default
      font-family SourceSansProRegular
      text-align center
      color color-darkgrey
      border none
  &-datepicker
    border none
    padding 0
    min-width 200px
    max-width 283px
    width 283px
    margin-bottom 0


    &-header
      background-color #d54c2c
      padding 0
      border none
      color color-white
      border-radius none

    &-month
      font-family LatoLight
    &-year
      display none
    &-prev
      display flex
      justify-content center
      align-items center
      padding-right 0.2rem
      top 1px
      left 1px
      &::after
        font-family FontAwesome
        content '\f053'
        display block
        color white
    &-next
      display flex
      justify-content center
      align-items center
      padding-left 0.2rem
      top 1px
      right 1px

      &::after
        font-family FontAwesome
        content '\f054'
        display block
        color white
    & table
      margin-bottom 0
    &-calendar

      & thead
        color color-white
        font-family LatoBlack
        background-color color-red
        text-transform uppercase
        font-size 0.8em

      & tbody
        background-color #f2f2f2
        & td
          border 0.2em solid color-white
          padding 0
          width 3em
          height 3em
          font-size 1em
          text-align center
          & a
            display block
            height 100%
        & td:first-child
          border-left none
        & td:last-child
          border-right none

  &-widget
    &.ui-widget-content
      border none

    &-content
      & .ui-state-default
        font-family SourceSansProRegular
        font-size 1.7rem
        border none
        text-align center
        color #868686
        padding 0.1rem 0.1rem
      & .ui-state-highlight
        color color-white
        background-color color-red
      & .ui-state-active
        color color-white
        background-color color-red



.ui-widget-header .ui-icon
  background-image none



