.news
  box-sizing border-box
  display flex
  width 48.5%
  height 16rem
  justify-content center

  &__picture
    width 32%
    flex-shrink 0
    img
      width 100%
      height 100%
      border-radius .3rem 0 0 .3rem

  &__area
    display flex
    flex-flow column
    justify-content space-around
    align-items stretch
    padding 8%
    width 68%
    box-sizing border-box
    color color-white
    text-align left
    background-color color-red
    border-radius:0 .3rem .3rem 0
    flex-shrink 0
    &_title
      font-family LatoLight
      font-size 2rem
      margin 2% 0 10% 0
      line-height 2rem
      flex-shrink 0

    &_datetime
      position relative
      bottom .5rem
      font-family LatoRegular
      font-size .8rem
      font-weight bold
      margin 0 0 10% 0
      flex-shrink 0
    &_text
      position relative
      bottom .7rem
      font-family LatoRegular
      font-size .8rem
      flex-shrink 0
