.news-block
  display flex
  flex-flow row wrap
  justify-content center
  &__text
    width 100%

.news
  box-sizing content-box
  display flex
  width 40%
  height 40%
  justify-content center

  &__picture
    width 30%
    flex-shrink 0
    img
      width 100%
      height 100%
      border-radius .5em 0 0 .5em
  &__area
    display flex
    flex-flow column
    justify-content flex-start
    padding 3em 2em
    width 50%
    box-sizing border-box
    color color-white
    background-color color-red
    border-radius:0 .5em .5em 0
    flex-shrink 0
    &_title
      font-family LatoLight
      font-size 2.5em
      margin 0 0 .5em 0
      flex-shrink 0
    &_datetime
      font-family LatoBlack
      font-size 1.1em
      margin-bottom 1em
      flex-shrink 0
    &_text
      font-family LatoRegular
      font-size 1.1em
      flex-shrink 0
