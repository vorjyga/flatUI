circle-radius = 5rem

.messaging-block
  display flex
  justify-content flex-start
  flex-flow column nowrap
  align-items center
  width 50%

.messaging
  width 290px
  display flex
  flex-flow column

  &__header
    background-color color-green
    border-radius 0.2rem 0.2rem 0 0
  &__name
    font-family SourceSansProLight
    font-size 2em
    text-align center
    vertical-align middle
    color color-white
    padding 1rem
  &__underline
    background-color color-darkgreen
    height 2rem
    width 100%

  &__body
    display flex
    flex-flow column
    align-items center
    background-color color-grey
    justify-content flex-start
    width 100%
    border none
    border-radius 0 0 .2rem .2rem

  &__icons
    width 100%
    display flex
    justify-content space-around
    margin 1rem
    color color-darkgrey
    &__mug
      position relative
      top -3.5rem
      right 0
      display block
      height circle-radius
      width circle-radius
      border .3rem solid color-grey
      border-radius 50%
      background-color color-grey
    &__face
      width 100%
    &__talks,
    &__photo
      font-size 1.5rem

  &__incoming
    width 80%
    background-color color-white
    border none
    border-radius 0.5rem
    margin -3rem 0 2rem 0
    &__text
      font-family LatoBold
      font-size .8rem
      color color-darkgrey
      background-color color-white
      text-align left
      margin 1rem

  &__outgoing
    width 80%
    display block
    box-sizing border-box
    background-color color-grey
    border .3rem solid color-white
    border-radius .3em
    &__text
      width 100%
      padding 1rem
      text-align left
      font-family LatoBold
      color color-darkgrey
      resize none
      background-color color-grey
      border none
      outline none
      height 6rem

  &__button
    display flex
    width 80%
    margin 1rem
    height 8%
    margin-bottom 1.5rem
    & *
      font-family LatoRegular





