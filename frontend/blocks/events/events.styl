.event
  display flex
  flex-flow row nowrap
  box-sizing content-box
  width 40%
  height 40%
  justify-content center

  &__picture
    width 30%
    img
      width 100%
      height 100%
      border-radius .5em 0 0 .5em
  &__area
    display flex
    flex-flow column
    justify-content flex-start
    align-items flex-start
    padding 1em 2em
    width 50%
    box-sizing border-box
    color color-white
    background-color color-green
    border-radius:0 .5em .5em 0

    &__timeblock
      
      display flex
      justify-content space-between
      align-items center
      width 90%
      font-family LatoLight
      height 7em

      &_datetime
        border 1px solid color-green
        font-size 6em
        margin-bottom 0
      &_month
        border 1px solid color-green
        font-size 3em
        margin-top 0.6em
    &__title
      font-size 1em
    &_text
      font-size 1em
      margin-bottom 1em
    &_button

      display flex
      align-items center
      justify-content center
      width 90%
      height 10%

