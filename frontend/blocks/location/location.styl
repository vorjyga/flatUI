.location-block
  width 100%

.location
  display flex
  align-items center
  flex-flow column nowrap
  flex-shrink 0


  &__map
    height 15rem
    width 100%
    border-radius .3rem .3rem 0 0
    flex-shrink 0

  &__info
    display flex
    justify-content space-between
    align-items center
    background-color color-red
    width 100%
    height 5rem
    border-radius 0 0 .3rem .3rem
    color white
    flex-shrink 0

  &__text
    font-family LatoLight
    font-size 2rem
    padding-left 1rem

  &__addres
    font-family LatoBlack
    text-transform uppercase
    text-align left
    font-size .7rem
    width 20%
    padding-right 35%

  &__target
    font-size 3rem

  &__pipka
    font-size 3rem
    padding-right 1rem




