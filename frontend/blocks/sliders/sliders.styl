.sliders-block
  display flex
  flex-flow row wrap
  width 100%
  justify-content space-between

.slider
  box-sizing border-box
  display block
  width 46%
  outline none

  &__body.ui-widget-content
    border none
    background-color #e5e5e5
    height 5px
  & .ui-slider-handle
    outline none
    border none
    top -7.5px
    cursor pointer
    border-radius 50%

    & .handle_popup
      display block
      justify-content center
      align-items center
      background-color inherit
      height 25px
      width 20px
      top - 30px
  & .ui-state-active
    outline none
    border none
  & .ui-slider-range
    background-color color-green
  &__scale
    display flex
    justify-content space-between
    align-items center
    width 100%
    font-family LatoRegular
    font-size .8em
    color color-grey
    position relative
    top: 10px




