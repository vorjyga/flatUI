
.slider
  box-sizing border-box
  display block
  width 44%
  outline none

  &__body.ui-widget-content
    border none
    background-color #e5e5e5
    height 5px
  & .ui-slider-handle
    outline none
    border none
    top -7.5px
    cursor pointer
    border-radius 50%

  & .ui-state-active
    outline none
    border none
  & .ui-slider-range
    background-color color-green

  &__scale
    display flex
    justify-content space-between
    align-items center
    width 105%
    font-family LatoRegular
    font-size .9em
    color color-grey
    position relative
    top: 15px

  &_balloon
    text-align center
    background-color inherit
    border-radius .4rem
    padding 4px .5rem
    color color-white
    font-size 1rem
    font-weight bold
    position absolute
    top -2.4rem
    right -.7rem
    width 1.6rem
    height 1.3rem
    font-family LatoBlack
    display flex
    justify-content center
    align-items center
    &::before
      content ''
      display block
      background-color inherit
      transform rotate(45deg)
      width 9px
      height 9px
      position absolute
      top 1.5rem
      right 1rem





