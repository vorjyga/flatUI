.sliders-block
  display flex
  flex-flow row wrap
  width 100%
  justify-content space-between
  &__text
    margin-top 1.5rem
    margin-bottom 2.3em

.slider
  box-sizing border-box
  display block
  width 44%
  outline none

  &__body.ui-widget-content
    border none
    background-color #e5e5e5
    height 5px
  & .ui-slider-handle
    outline none
    border none
    top -7.5px
    cursor pointer
    border-radius 50%

    & .handle_popup
      display block
      justify-content center
      align-items center
      background-color inherit
      height 25px
      width 20px
      top - 30px
  & .ui-state-active
    outline none
    border none
  & .ui-slider-range
    background-color color-green

  &__scale
    display flex
    justify-content space-between
    align-items center
    width 100%
    font-family LatoRegular
    font-size .8em
    color color-grey
    position relative
    top: 10px

  &_balloon
    text-align center
    background-color inherit
    border-radius .2rem
    padding 4px .5rem
    color color-white
    font-size .8rem
    font-family LatoBlack
    font-weight bold
    position absolute
    top -2.3rem
    right -.4rem
    width 1rem
    &::before
      content ''
      display block
      background-color inherit
      transform rotate(45deg)
      width 6px
      height 10px
      position absolute
      top 1.1rem
      right .7rem





