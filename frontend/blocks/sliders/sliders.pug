//name

mixin slider(context)
    .slider(
    data-color = context.color
    data-value= context.value

    )
        .slider__body(
        id= context.slidername
        )
            .slider__handle.ui-slider-handle
                if (context.balloon)
                    .slider_balloon
        if (context.scale)
            .slider__scale.test
                .scale 0
                .scale 25
                .scale 50
                .scale 75
                .scale 100
