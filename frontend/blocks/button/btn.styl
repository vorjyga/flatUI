.buttons
  display flex
  flex-flow row wrap
  justify-content center
  align-items: flex-end

  &__text
    width 100%
    text-align center
    font-weight bold

  &__btn + &__btn
    margin-left 2em

  &__btn
    color font-color

    border-radius 0.25rem
    border 0
    margin-top: 75px

    &_small
      width 6.5rem
      padding 0.5rem
    &_big
      width 10rem
      padding 1rem

    &_red
      background-color color-red

    &_green
      background-color color-green
