.buttons
  display flex
  flex-flow row wrap
  justify-content center
  align-items: flex-end

  &__btn
    color font-color
    margin-right 23px
    border-radius 0.25rem
    border 0px
    margin-top: 75px

  &__small
    width 6.5rem
    padding 0.5rem
  &__big
    width 10rem
    padding 1rem


  &__text
    width 100%
    text-align center
    font-size 20px
    font-weight bold

  &__red
    background-color color-red

  &__green
    background-color color-green
