.buttons-block
  display flex
  flex-flow row wrap
  justify-content space-between
  align-items: flex-end
  width 80%

  &__text
    width 100%
    text-align center
    font-weight bold
    margin-bottom 3.1em

.button
  position relative
  color font-color
  font-weight bold
  border-radius 0.25rem
  border none
  outline none
  text-transform uppercase
  overflow  hidden
  font-family LatoRegular
  &:hover
    cursor pointer
  &_custom
    width 100%
    height 100%
  &_small
    font-size .7em
    font-weight bold
    width 5.8rem
    height 1.65rem
    padding 0.5rem
  &_big
    font-size .9em
    font-weight bold
    width 8.8rem
    height 2.5rem
  &_red
    background-color color-red
    &:hover
      box-shadow: 0px 0px 0px 1px color-darkred inset, 0px 0px 0px 2px color-darkred inset, 0px 4px 0px 0px color-darkred, 0px 5px 0px 0px color-darkred, 0px 8px 0px 0px color-darkred;
  &_green
    background-color color-green
    &:hover
      box-shadow: 0px 0px 0px 1px color-darkgreen inset, 0px 0px 0px 2px color-darkgreen inset, 0px 4px 0px 0px color-darkgreen, 0px 5px 0px 0px color-darkgreen, 0px 8px 0px 0px color-darkgreen
  &_white-red
    background-color color-white
    color color-red
  &_white-green
    background-color color-white
    color color-green

/*magic ripple effects*/
.ripple {
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0);
  position: absolute;
  opacity: 1;
}
.rippleEffect {
  animation: rippleDrop .6s linear;
}

@keyframes rippleDrop {
  100% {
    transform: scale(2);
    opacity: 0;
  }
}