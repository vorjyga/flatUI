.container
  display flex
  justify-content center
  align-items center
  flex-flow column nowrap
  max-width 700px
  min-width 500px
  margin 2rem auto

h1
  font-family LatoBlack
  font-size 1.3em
  text-align center
  width 100%
  margin 2.5em 0 1.8em 0
  text-transform uppercase
  letter-spacing 0.1rem
h2
  -webkit-margin-before 0
  -o-margin-before 0
  -moz-margin-before 0
  margin-left 0


/*arrows block*/
.arrows-block
  width 72%
  display flex
  justify-content space-between
  align-items center
  flex-flow row wrap

  &__text
    width 100%
    text-align center
    font-weight bold
    margin-top 2.65rem
    margin-bottom 2.7rem



/*buttons block*/
.buttons-block
  display flex
  flex-flow row wrap
  justify-content space-between
  align-items: flex-end
  width 79.6%

  &__text
    width 100%
    text-align center
    font-weight bold
    margin-bottom 5.3rem

/*charts  block*/

.charts-block
  display flex
  flex-flow row wrap
  justify-content space-between
  width 105%

  &__text
    width 100%
    text-align center
    margin-bottom 1.5rem
    margin-top 3.4rem

/*sliders  block*/
.sliders-block
  display flex
  flex-flow row wrap
  width 100%
  justify-content space-between
  &__text
    margin-top 1.9rem
    margin-bottom 2.7em

/*stages  block*/
.stages-block
  width 110%
  &__text
    margin-top 3.6rem
    margin-bottom 1.6em

/*FORMS BLOCK*/
.forms-block
  width 101%
  display flex
  flex-flow row wrap
  justify-content space-between

  &__text
    width 100%
    text-align center
    margin-bottom 3.4rem
    margin-top 4.2rem

/*forms-tumblers block*/
.forms-tumblers
  display flex
  flex-flow column nowrap
  justify-content flex-start
  align-items center
  box-sizing border-box
  width 50%

/*toggles block*/
.toggles
  display flex
  flex-flow row wrap
  justify-content space-around
  align-items center
  width 55%
  &__text
    margin-top 0
    margin-bottom 2.3rem

/*checkboxes block*/
.checkboxes
  display flex
  flex-flow row wrap
  justify-content space-around
  align-content space-between
  width 40%
  &__text
    margin-top 3rem
    margin-bottom 1rem

/*search block*/
.search-block
  display flex
  flex-flow column nowrap
  justify-content flex-start
  box-sizing border-box
  width 50%
  &__text
    margin-top 3.5rem
    margin-bottom 1.5rem

/*profile block*/
.profile-block
  display flex
  flex-flow column nowrap
  box-sizing border-box
  justify-content center
  align-items center
  width 50%
  &__text
    margin-top 3.5rem

/*news block*/
.news-block
  display flex
  flex-flow row wrap
  justify-content space-between
  width 102%
  margin-top 2.5rem
  &__text
    margin-bottom 2.5rem

/*Location block*/
.location-block
  width 100%
  margin-bottom 0
  &__text
    margin-top 3.5rem
    margin-bottom 2.6rem


/*Calendar-messaging block*/
.calendar-messaging
  display flex
  justify-content space-between
  width 100%

/*calendar block*/
.calendar-block
  width 45%
  margin-left .4rem
  &__text
    margin-top 1rem
    margin-bottom 1.9rem

/*messaging block*/
.messaging-block
  display flex
  justify-content flex-start
  flex-flow column nowrap
  align-items center
  width 45%
  margin-right .4rem
  &__text
    margin-bottom 1.9rem
    margin-top 1rem

/*video block*/
.video-block
  display flex
  flex-flow row wrap
  justify-content center
  margin-top 1.1rem
  &__text
    margin-bottom 1.6rem