      .arrows-block
        h1.arrows-block__text ARROW BUTTONS
        +arrow({
          direction: 'left',
          background: 'transparent'
        })
        +arrow({
          direction: 'right',
          background: 'transparent'
        })
        +arrow({
          direction: 'left',
          background: 'grey'
        })
        +arrow({
          direction: 'right',
          background: 'grey'
        })
        +arrow({
          direction: 'left',
          background: 'green'
        })
        +arrow({
          direction: 'right',
          background: 'green'
        })
      .charts-block
        h1.charts-block__text PERCENTAGES / PIE CHART
        +chart({
          id:'firstchart',
          percent:'0',
          xclass:'middle'
        })
        +chart({
          id: 'secondchart',
          percent: '38',
          xclass: 'middle'
        })
        +chart({
          id: 'firthchart',
          percent: '62',
          xclass: 'middle'
        })
        +chart({
          id: 'fourthchart',
          percent: '89',
          xclass: 'middle'
        })
      .sliders-block
        h1.sliders-block__text SLIDERS
        +slider({
          slidername: "slider1",
          color: '#e75735',
          value:40,
          balloon:true,
          scale: false
        })
        +slider({
          slidername: "slider2",
          color: '#4eb7a8',
          value: 75,
          scale: true,
          balloon:false
        })
      .stages-block
        h1.stages-block__text STAGES
        +stage({total: 5,
                done: 3
        })
      .forms-block
        h1.forms-block__text FORM ELEMENTS
        +inputs
        .forms-tumblers
          .toggles
            h1.toggles__text TOGGLES
            +toggle({
              id:'toggle1',
              checked:false
            })
            +toggle({
              id:'toggle2',
              checked:true
            })
          .checkboxes
            h1.checkboxes__text TICK BOXES
            +checkbox({
              id:'uno',
              name:'group',
              checked:true
            })
            +checkbox({
              id:'dos',
              name: 'group',
              checked: false
            })

        .search-block
          h1.search-block__text SEARCH / DROP DOWN
          +search
          +dropdown({
            options: ["Choose an option", "First option", "Second option", "Hueption", "Fourth option"]
          })
        .profile-block
          h1.profile-block__text USER PROFILE
          +profile({
            photo: 'face1.png',
