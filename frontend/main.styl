.container
  display flex
  justify-content center
  align-items center
  flex-flow column nowrap
  max-width 700px
  min-width 500px
  margin 2rem auto

h1
  font-family LatoBlack
  font-size 1.3em
  text-align center
  width 100%
  margin 2.5em 0 1.8em 0
  text-transform uppercase
  letter-spacing 0.1rem
h2
  -webkit-margin-before 0
  -o-margin-before 0
  -moz-margin-before 0
  margin-left 0

/*FORMS BLOCK*/
.forms-block
  width 100%
  display flex
  flex-flow row wrap
  justify-content space-between

  &__text
    width 100%
    text-align center
    margin-bottom 2.3em



